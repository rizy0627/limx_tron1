# Nav2 Configuration for Outdoor SLAM and Navigation
# Optimized for Bunker Mini with Livox Mid-360 and Fast-LIO2

bt_navigator:
  ros__parameters:
    use_sim_time: false
    global_frame: global_map
    robot_base_frame: base_link
    odom_topic: /base/odom # after transform from /fastlio/odom
    bt_loop_duration: 10
    default_server_timeout: 20
    # 使用当前工作区install的绝对路径，确保从本地编译资源加载
    # 为定位崩溃，先使用较简化的导航到目标树（仅在路径失效时重规划）
    default_nav_to_pose_bt_xml: "/opt/ros/humble/share/nav2_bt_navigator/behavior_trees/navigate_w_replanning_only_if_path_becomes_invalid.xml"
    default_nav_through_poses_bt_xml: "/opt/ros/humble/share/nav2_bt_navigator/behavior_trees/navigate_through_poses_w_replanning_and_recovery.xml"
    # enable_groot_monitoring: true
    # groot_zmq_publisher_port: 1666
    # groot_zmq_server_port: 1667

    # DWB Controller
controller_server:
  ros__parameters:
    # controller server parameters (see Controller Server for more info)
    controller_frequency: 20.0
    min_x_velocity_threshold: 0.001
    min_y_velocity_threshold: 0.5
    min_theta_velocity_threshold: 0.001
    progress_checker_plugins: ["progress_checker"] # progress_checker_plugin: "progress_checker" For Humble and older
    goal_checker_plugins: ["goal_checker"]
    controller_plugins: ["FollowPath"]
    progress_checker:
      plugin: "nav2_controller::SimpleProgressChecker"
      required_movement_radius: 0.5
      movement_time_allowance: 10.0
    goal_checker:
      plugin: "nav2_controller::SimpleGoalChecker"
      xy_goal_tolerance: 0.25
      yaw_goal_tolerance: 0.25
      stateful: True
    # DWB controller parameters
    FollowPath:
      plugin: "dwb_core::DWBLocalPlanner"
      debug_trajectory_details: True
      min_vel_x: 0.05
      min_vel_y: 0.0
      max_vel_x: 0.4
      max_vel_y: 0.0
      max_vel_theta: 1.2
      min_speed_xy: 0.0
      max_speed_xy: 0.5
      min_speed_theta: 0.01
      acc_lim_x: 2.5
      acc_lim_y: 0.0
      acc_lim_theta: 3.5
      decel_lim_x: -2.5
      decel_lim_y: 0.0
      decel_lim_theta: -3.5
      vx_samples: 26
      vy_samples: 5
      vtheta_samples: 28
      sim_time: 3.5
      linear_granularity: 0.05
      angular_granularity: 0.025
      transform_tolerance: 0.2
      xy_goal_tolerance: 0.25
      trans_stopped_velocity: 0.25
      short_circuit_trajectory_evaluation: False
      limit_vel_cmd_in_traj: False
      stateful: True
      critics: ["RotateToGoal", "Oscillation", "ObstacleFootprint", "BaseObstacle", "GoalAlign", "PathAlign", "PathDist", "GoalDist"]
      ObstacleFootprint.scale: 3.0
      BaseObstacle.scale: 2.0
      PathAlign.scale: 8.0
      GoalAlign.scale: 12.0
      PathAlign.forward_point_distance: 0.8
      GoalAlign.forward_point_distance: 0.5
      PathDist.scale: 10.0
      GoalDist.scale: 16.0
      RotateToGoal.scale: 20.0
      RotateToGoal.slowing_factor: 4.0
      RotateToGoal.lookahead_time: -1.0

local_costmap:
  local_costmap:
    ros__parameters:
      update_frequency: 5.0
      publish_frequency: 2.0
      global_frame: global_map
      robot_base_frame: base_link
      use_sim_time: false
      footprint_clearing_enabled: true  # 使用机器人足迹区域主动清除障碍
      rolling_window: true
      width: 5
      height: 5
      resolution: 0.05
      robot_radius: 0.45  # Bunker Mini approximate radius
      plugins: ["obstacle_layer", "inflation_layer"]
      static_layer:
        plugin: "nav2_costmap_2d::StaticLayer"
        enabled: false
        map_subscribe_transient_local: true
      inflation_layer:
        plugin: "nav2_costmap_2d::InflationLayer"
        cost_scaling_factor: 2.0
        inflation_radius: 0.5
      obstacle_layer:
        plugin: "nav2_costmap_2d::ObstacleLayer"
        enabled: true
        track_unknown_space: true
        observation_sources: obstacles freespace
        obstacles:
          topic: /fastlio/cloud_registered_body
          max_obstacle_height: 1.0
          min_obstacle_height: 0.2
          clearing: false
          marking: true
          observation_persistence: 5.0
          expected_update_rate: 0.5
          data_type: "PointCloud2"
          obstacle_max_range: 8.0
          obstacle_min_range: 0.0
        freespace:
          topic: /fastlio/cloud_registered_body
          max_obstacle_height: 1.0
          min_obstacle_height: 0.0
          clearing: true
          marking: false
          observation_persistence: 0.0
          expected_update_rate: 0.5
          data_type: "PointCloud2"
          raytrace_max_range: 12.0
          raytrace_min_range: 0.0
      # static_layer:
      #   plugin: "nav2_costmap_2d::StaticLayer"
      #   map_subscribe_transient_local: true
      always_send_full_costmap: true

global_costmap:
  global_costmap:
    ros__parameters:
      update_frequency: 1.0
      publish_frequency: 1.0
      global_frame: global_map
      robot_base_frame: base_link
      use_sim_time: false
      robot_radius: 0.55  # Bunker Mini approximate radius
      resolution: 0.05
      track_unknown_space: true
      width: 50
      height: 50
      origin_x: -25.0
      origin_y: -25.0
      rolling_window: false
      # SLAM模式下不使用static_layer，避免"no map received"错误
      # 如需使用预建地图，请设置slam_mode:=false并提供map_file参数
      plugins: ["voxel_layer", "inflation_layer"]
      static_layer:
        plugin: "nav2_costmap_2d::StaticLayer"
        enabled: false
        map_subscribe_transient_local: true
      voxel_layer:
        plugin: "nav2_costmap_2d::VoxelLayer"
        enabled: true
        publish_voxel_map: false
        origin_z: 0.0  # 调整原点Z值，适应倾斜LiDAR
        z_resolution: 0.05
        z_voxels: 16    # 增加Z方向体素数量
        max_obstacle_height: 1.0
        min_obstacle_height: 0.2  # 设置最小障碍物高度，检测地面凹陷
        mark_threshold: 1
        observation_sources: pointcloud
        pointcloud:
          topic: /multi_session/merged_map
          max_obstacle_height: 1.0
          min_obstacle_height: 0.2  # 与上面保持一致
          clearing: true
          marking: true
          data_type: "PointCloud2"
          raytrace_max_range: 5.0
          raytrace_min_range: 0.2
          obstacle_max_range: 20.0
          obstacle_min_range: 0.0
      inflation_layer:
        plugin: "nav2_costmap_2d::InflationLayer"
        cost_scaling_factor: 2.0
        inflation_radius: 0.5
      always_send_full_costmap: true

