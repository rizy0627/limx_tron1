velocity_smoother:
  ros__parameters:
    use_sim_time: false
    smoothing_frequency: 30.0
    scale_velocities: false
    feedback: "OPEN_LOOP"
    max_velocity: [0.5, 0.0, 1.5]  # [linear_x, linear_y, angular_z]
    min_velocity: [-0.5, 0.0, -1.5]
    max_accel: [1.5, 0.0, 2.2]
    max_decel: [-1.5, 0.0, -2.2]
    odom_topic: "/base/odom"  # 使用Fast-LIO2里程计保持一致性
    odom_duration: 0.1
    deadband_velocity: [0.0, 0.0, 0.0]
    velocity_timeout: 1.0